@using Microsoft.AspNetCore.Identity
@inject UserManager<User> _userManager

@{
    var currentUserId = _userManager.GetUserId(User);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CVBuddy</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CVBuddy.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm  navbar-light bg-white border-bottom box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CVBuddy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="navbar-collapse collapse ">
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                    @if (!User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login"><i class="fa-solid fa-door-open"></i>Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register"><i class="fa-solid fa-pen"></i>Register</a>
                            </li>
                            <a class="nav-link locked-out-for-text" asp-controller="Message" asp-action="Messages">
                                <i class="fa-solid fa-envelope"></i>
                                Messages <b id="notification"></b><i class="fa-sharp-duotone fa-solid fa-lock"></i>
                            </a>
                        }
                        else
                        {
                            
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Message" asp-action="Messages">
                                    <i class="fa-solid fa-envelope"></i>
                                    Messages <b id="notification">@(ViewBag.NotReadCount ?? "0")</b>
                                </a>
                                
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid flex-grow-1">
        <div class="row h-100 flex-nowrap align-items-stretch">
            <aside class="col-md-3 col-lg-2 bg-light p-3  d-flex flex-column">
                <h6 class="text-uppercase">Meny</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link" asp-controller="Profile" asp-action="ReadProfile" asp-route-userId="@currentUserId"><i class="fa-solid fa-shapes"></i>   My profile</a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="User" asp-action="GetUser"><i class="fa-solid fa-user"></i>   My Info</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="CvInformation" asp-action="ReadCv"><i class="fa-solid fa-file"></i>   My CV</a>@* Länk till cv, om finns ingen cv, utskrift, och knapp skapa cv *@
                    </li>
                    
                    <li class="nav-item">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link" asp-controller="Project" asp-action="GetProject"><i class="fa-solid fa-diagram-project"></i>   My Projects</a> @* lista med projekt,vid varje projekt knapp update/delete *@
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Project" asp-action="GetProject"><i class="fa-solid fa-diagram-project"></i>   Projects</a> @* lista med projekt,vid varje projekt knapp update/delete *@

                        }
                    </li>
                </ul>
                <ul class="nav flex-column mt-auto">
                    <li class="nav-item">

                        <a class="nav-link" asp-controller="Options" asp-action="GetOptions"><i class="fa-solid fa-gear"></i>   Options</a>
                    </li>
                </ul>
            </aside>
            <main role="main" class="col-md-9 col-lg-10 p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top text-muted">
        <div class="container-fluid text-center py-3">
            &copy; 2025 - CVBuddy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>