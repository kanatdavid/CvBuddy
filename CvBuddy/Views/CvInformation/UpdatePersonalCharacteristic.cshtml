@model bla.Model.CvInfo.PersonalCharacteristicVM

<form asp-action="UpdatePersonalCharacteristic" method="post">
    <div class="d-flex justify-content-center align-content-center min-vh-100">
        <div class="col-md-6 col-lg-4">
            <h3 class="text-center mb-4">Personal Characteristic</h3>

            <div class="mb-3">
                <input type="hidden" asp-for="@Model.PCId" />
                <label asp-for="@Model.CharacteristicName" class="form-label"></label>
                <input type="text" asp-for="@Model.CharacteristicName" class="form-control" />
                <span asp-validation-for="CharacteristicName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Save changes</button>
        </div>
    </div>
</form>